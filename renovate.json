{
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    "group:all",
    "schedule:weekly",
    ":maintainLockFilesWeekly"
  ],
  "rangeStrategy": "replace",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": "group:all"
  },
  "packageRules": [
    {
      "automerge": true,
      "depTypeList": [ "devDependencies", "peerDependencies" ],
      "updateTypes": [ "minor", "patch", "pin", "digest", "lockFileMaintenance", "bump" ]
    }
  ],
  "commitMessageAction": "Update",
  "timezone": "America/New_York",
}